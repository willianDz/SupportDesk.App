<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SupportDesk.App.Controls.EntryWithIcon">
    <Border
        Padding="5,0"
        BackgroundColor="{StaticResource White}"
        StrokeShape="RoundRectangle 8">
        <Grid
            ColumnDefinitions="20,*"
            ColumnSpacing="5">

            <Image
                x:Name="imgIcon"
                HeightRequest="22"/>

            <Entry
                Grid.Column="1"
                x:Name="entryTextBox"
                TextChanged="entryTextBox_TextChanged"/>
        </Grid>
    </Border>
</ContentView>
